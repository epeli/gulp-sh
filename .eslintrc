{
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2019,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "node": true,
        "jest": true
    },
    "globals": {
        "Symbol": true,
        "Promise": true
    },
    "rules": {
        "no-constant-condition": 0,
        "semi": [1, "always"],
        "comma-dangle": [1, "always-multiline"],
        "no-restricted-globals": [2, "self", "Text"],
        "no-console": 0,
        "no-undef": 2,
        "camelcase": 1,
        "block-scoped-var": 2,
        "no-unused-vars": 1,
        "no-trailing-spaces": 1,
        "keyword-spacing": 1,
        "object-curly-spacing": 0,
        "curly": [2, "multi-line"],
        "quotes": [1, "double", { "avoidEscape": true }]
    }
}
